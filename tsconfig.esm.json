{
    "compilerOptions": {
        "outDir": "./esm/",
        "module": "esnext",
        "target": "es6",
        "declaration": true,
        "jsx": "react",
        "moduleResolution": "Node",
        "keyofStringsOnly": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "include": ["src/components"],
    "exclude": ["node_modules", "build", "scripts", "**/__tests__/*.test.tsx"]
}
