{
  "compilerOptions": {
    "noEmit": true, // Don't emit; allow Babel to transform files.
    "outDir": "./dist/",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "es2016",
      "dom"
    ],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "paths": {},
    "skipLibCheck": true,
    "typeRoots": [
      "node",
      "node_modules/@types",
      "node_modules/@typed-mxgraph",
      "./typings"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "storybook-static",
    "src/public/**/*",
    "./gulpfile.js"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "src/**/*",
    "gulpfile.js"
  ]
}