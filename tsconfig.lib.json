{
  "compilerOptions": {
    "outDir": "./lib/",
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "keyofStringsOnly": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/components"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "**/__tests__/*.test.tsx",
  ]
}